{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "@pkg-a/*": ["packages/pkg-a/src/*"],
      "@pkg-b/*": ["packages/pkg-b/src/*"]
    }
  }
}