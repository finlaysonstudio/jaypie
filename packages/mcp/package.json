{
  "name": "@jaypie/mcp",
  "version": "0.1.3",
  "description": "Jaypie MCP server",
  "license": "MIT",
  "author": "Finlayson Studio",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jaypie-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "prompts"
  ],
