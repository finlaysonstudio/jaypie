#!/bin/bash

# Capture both stdout and stderr
output=$("$@" 2>&1)

if [ -z "$output" ]; then
    claude "The user is requesting a fix based on command output. Ask them for the command, reproduce the error, and provide the fix."
else
    message="
Running \`$@\` produces the following output. 
Fix the errors and run \`$@\` again to confirm.
"
    echo "$message"
    sleep 1
    echo "$output" | claude "$message"
fi