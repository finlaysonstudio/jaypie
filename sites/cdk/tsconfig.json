{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "cdk.out",
    "dist",
    "node_modules"
  ],
  "include": [
    "bin/**/*.ts",
    "lib/**/*.ts"
  ]
}
